<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        android:id="@+id/call_Taxi_Button"
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:text="Taksi Çağır"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintBottom_toBottomOf="parent" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_marginTop="0dp"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        tools:context=".MapsActivity" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        map:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bottom_dark"
        />


    <Button
        android:id="@+id/taxi_come_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taksi Geldi"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintStart_toEndOf="@id/call_Taxi_Button"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

